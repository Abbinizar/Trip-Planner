<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="onestep.id.joints.CreateTrip">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="#D9C607" />

    <TextView
        android:id="@+id/titleCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Create your plan!"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="22dp" />

    <LinearLayout
        android:id="@+id/create"
        android:layout_width="325dp"
        android:layout_height="425dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#e6e7e9"
        android:orientation="vertical"
        android:padding="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Destination"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Destination"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Date"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/buttonBerangkat"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:background="#fff"
                        android:onClick="datePicker"/>


                    <Button
                        android:id="@+id/buttonSampai"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:background="#fff"
                        android:onClick="datePicker"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Travelers"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:text="Dewasa" />

                    <Button
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="#fff"
                        android:text="Remaja" />

                    <Button
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="#fff"
                        android:text="Balita" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Activity"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Culture" />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Romantic" />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Outdoors" />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Indoors" />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Relaxing" />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shopping" />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Popular" />
                <Button
                    android:layout_marginTop="30dp"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Plan It"
                    android:layout_gravity="center"
                    android:background="@color/colorPrimary"
                    android:textColor="#fff"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
